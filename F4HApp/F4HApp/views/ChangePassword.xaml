<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F4HApp.views.ChangePassword" Title="Change Password">
    <ContentPage.Content>
        <StackLayout Margin="15,30,30,30" HorizontalOptions="FillAndExpand">

            <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="FillAndExpand" >

                <Entry x:Name="txtExistingPassword"  Placeholder="Existing Password *" Keyboard="Default"
                       HorizontalOptions="FillAndExpand" Margin="0,5,0,0" IsPassword="True" />

                <Entry x:Name="txtNewPassword"  Placeholder="New Password *" Keyboard="Default"
                       HorizontalOptions="FillAndExpand" Margin="0,5,0,0" IsPassword="True" />

                <Entry x:Name="txtConfirmPassword"  Placeholder="Confirm Password *" Keyboard="Default"
                       HorizontalOptions="FillAndExpand" Margin="0,5,0,0" IsPassword="True" />
                
                <Button x:Name="btnChangePassword" Text="Submit" BackgroundColor="#9e1b69" TextColor="White"
                    HorizontalOptions="FillAndExpand"  Margin="0,10,0,0"  Clicked="OnbtnChangePassword" />

            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>